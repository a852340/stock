{
  "name": "electron-stock-app",
  "private": true,
  "version": "0.0.0",
  "description": "Electron Stock App - A modern stock tracking application built with Electron, React, and TypeScript",
  "author": "Electron Stock App Team",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test:datafetcher": "tsx src/test/dataFetcherTest.ts"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.22",
    "axios": "^1.13.2",
    "bufferutil": "^4.0.9",
    "electron-store": "^8.1.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.17",
    "utf-8-validate": "^6.0.5",
    "ws": "^8.18.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "nodeModulesDir": true,
    "buildDependenciesFromSource": true,
    "files": [
      "dist",
      "dist-electron",
      "node_modules/ws/**/*",
      "node_modules/bufferutil/**/*",
      "node_modules/utf-8-validate/**/*"
    ]
  }
}
